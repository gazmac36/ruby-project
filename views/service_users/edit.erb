<br>
  <label for="address-town"></label>
  <input id="address-town" type="text" name="address_town" value="<%= @service_user.address_town %>" required>
<br>
  <label for="address-county"></label>
  <input id="address-county" type="text" name="address_county" value="<%= @service_user.address_county %>" required>
<br>
  <label for="address-postcode"></label>
